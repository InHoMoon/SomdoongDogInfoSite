<?xml version="1.0" encoding="UTF-8"?>

<!-- 마이바티스 3 Mapper DTD -->
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="somdoong.store.dao.face.StoreDao">

	<resultMap type="somdoong.store.dto.Store" id="StoreMap">
		<id column="store_no" property="storeNo"/>
		<result column="category" property="category"/>
		<result column="title" property="title"/>
		<result column="info" property="info"/>
		<result column="content" property="content"/>
		<result column="reportingDate" property="reportingDate"/>
		<result column="hit" property="hit"/>
		<result column="likepost" property="likepost"/>
		
		<association property="product" javaType="somdoong.store.dto.Product">
			<id column="product_no" property="productNo"/>
			<result column="product_name" property="productName"/>
			<result column="price" property="price"/>
			<result column="stork" property="stock"/>
		</association>
	
	
	</resultMap>

<!-- 카테고리가 일치하는 상품들만 조회하는 쿼리로 수정 -->
	<select id="selectByCategory" resultMap="StoreMap" parameterType="String">
		SELECT s.store_no, s.title, s.category, p.product_name, p.price
		FROM store s, product p
		WHERE s.product_no = p.product_no
		AND category = #{category }
		ORDER BY s.store_no
	</select>
	
	<update id="updateHit" parameterType="somdoong.store.dto.Store">
		UPDATE store
		SET hit = hit + 1
		WHERE store_no = #{storeNo }
	</update>
	
	<select id="selectStore" resultMap="StoreMap" parameterType="somdoong.store.dto.Store">
		SELECT s.store_no, s.product_no, s.category, s.title
			, s.info, s.content, s.reportingDate, s.hit, s.likepost
			, p.product_name, p.price, p.stock
		FROM store s, product p
		WHERE s.product_no = p.product_no
		AND store_no = #{storeNo }
	</select>
	
	
</mapper>